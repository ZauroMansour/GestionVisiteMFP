{% extends 'base.html.twig' %}

{% block title %}Changer mot de passe | Plateforme demandeurs!{% endblock %}

{% block body %}
    <div class="container">
        <div id="wizard_container">
            <!-- Leave input above for security protection, read docs for details -->
            <div id="middle-wizard">
                <div class="row justify-content-center my-2">
                    {% for message in app.session.flashBag.get('resetpwd') %}
                    <p class="alert alert-danger alert-info mb-0">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </p>
                    {% endfor %}
                </div>
                <div class="question_title">
                    <h3>Modifier votre mot de passe</h3>
                </div>
                <div class="row" style="justify-content: center">
                    <div class="box_general">
                        <form method="post">
{#                            {% if error %}#}
{#                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
{#                            {% endif %}#}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous étes connecté en tant que {{ app.user.username }}, <a
                                            href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.password.first) }}
                                {{ form_errors(form.password.first) }}
                                {{ form_widget(form.password.first, {'attr': {'class': 'required form-control', 'placeholder': 'Mot de passe'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.password.second) }}
                                {{ form_errors(form.password.second) }}
                                {{ form_widget(form.password.second, {'attr': {'class': 'required form-control', 'placeholder': 'Répéter le mot de passe'}}) }}
                            </div>

                            <button class="btn btn-primary connexion-btn" type="submit">
                                Modifier mon mot de passe
                            </button>
                            {{ form_widget(form._token) }}
                            {{ form_end(form, {'render_rest': false}) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Container -->

{% endblock %}