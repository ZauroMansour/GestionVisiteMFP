{% extends 'base.html.twig' %}

{% block title %}Connexion | Plateforme demandeurs!{% endblock %}

{% block body %}
    <div class="container">
        <div id="wizard_container">
            <!-- Leave input above for security protection, read docs for details -->
            <div id="middle-wizard">
                <div class="question_title">
                    <h3>Connexion</h3>
                </div>
                <div class="row" style="justify-content: center">
                    <div class="box_general">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    Vous étes connecté en tant que {{ app.user.username }}, <a
                                            href="{{ path('app_logout') }}">Déconnexion</a>
                                </div>
                            {% endif %}

                            <label for="inputEmail">Nom d'utilisateur</label>
                            <input type="text" value="{{ last_username }}" name="usern" id="inputUsern"
                                   class="form-control" required autofocus>
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >


                            {#                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                            {#                            See https://symfony.com/doc/current/security/remember_me.html#}

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>


                            <button class="btn btn-primary connexion-btn" type="submit">
                                Connexion
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Container -->

{% endblock %}