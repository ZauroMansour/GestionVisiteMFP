    <link href="{{ asset('css/custom.css') }}" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
    <!-- Modernizr -->
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div id="preloader">
    <div data-loader="circle-side"></div>
</div><!-- /Preload -->

<div id="loader_form">
    <div data-loader="circle-side-2"></div>
</div><!-- /loader_form -->

<header>
    <img src="{{ asset('images/logosn.png') }}" alt="Logosn" srcset="">
    <p>
        Plateforme de gestion des visites
    </p>
</header>
<!-- /Header -->

<main>
    {% block body %}{% endblock %}
</main>
<!-- /main -->
<footer class="footer">
    <img class="img-footer" src="{{ asset('images/footer-flag.png') }}" alt="">
    <ul>
        <li class="border-r"><a target="_blank" href="http://www.fonctionpublique.gouv.sn/mentions_legales">Mentions légales</a></li>
        <li class="border-r"><a target="_blank" href="http://www.fonctionpublique.gouv.sn/cookies">Confidentialités et Cookies</a></li>
