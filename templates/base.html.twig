<!-- COMMON SCRIPTS -->
<script
        src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
<script src="{{asset('js/our_js.js')}}"></script>
<script src="{{asset('js/common_scripts.min.js')}}"></script>
<script src="{{asset('js/main.js')}}"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script>
    $flash_message = document.getElementById('flash-message');
    if ($flash_message) {
        message = $flash_message.getAttribute('data-message');
        if (message) {
            Swal.fire(
                '',
                "Votre demande est bien reçue, une réponse par e-mail vous sera communiquée dans les plus bref délais.",
                'success'
            )
        }
    }
</script>
{% block javascripts %}{% endblock %}
    </body>
</html>
