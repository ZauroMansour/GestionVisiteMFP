{% extends 'base.html.twig' %}

{% block title %}Demande | Plateforme demandeurs!{% endblock %}

{% block body %}
    <div class="container">
        <div id="wizard_container">
            {{ form_start(form) }}
            <!-- Leave input above for security protection, read docs for details -->
            <div id="middle-wizard">
                <div align='center'>
                    <img class="img-responsive" src="{{ asset('images/entete_formation.png') }}" alt="entete" style=width:100% height="auto" display ="block">
                </div>
                {# <div id="countdown" align = center>
                    <strong>Temps restant avant le debut de formation en GESTION DE PROJET </strong> :
                    <span id="countdown_day" >--</span> jours
                    <span id="countdown_hour">--</span> heures
                    <span id="countdown_min" >--</span> minutes
                    <span id="countdown_sec" >--</span> secondes
                </div> #}
                <!-- Last step ============================== -->
                <div class="submit step" id="end">
                    <div class="question_title">
                        <h3>Nouvelle demande de formation</h3>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="box_general box_general_form_new">
                                <div class="form-group">
                                    {{ form_label(form.matricule) }}
                                    {{ form_errors(form.matricule) }}
                                    {{ form_widget(form.matricule, {'attr': {'class': 'required form-control', 'placeholder': 'Matricule'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.prenom) }}
                                    {{ form_errors(form.prenom) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'required form-control', 'placeholder': 'Prénom'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'required form-control', 'placeholder': 'Nom'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.formation) }}
                                    {{ form_errors(form.formation) }}
                                    {{ form_widget(form.formation, {'attr': {'class': 'required form-control', 'placeholder': 'Fonction'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="box_general box_general_form_new">
                                <div class="form-group">
                                    {{ form_label(form.telephone) }}
                                    {{ form_errors(form.telephone) }}
                                    {{ form_widget(form.telephone, {'attr': {'class': 'required form-control', 'placeholder': 'Téléphone'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email) }}
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'required form-control', 'placeholder': 'Email'}}) }}
                                </div>
                                <div class="form-group add_bottom_30">
                                    {{ form_label(form.ministere) }}
                                    {{ form_errors(form.ministere) }}
                                    <div class="styled-select">
                                        {{ form_widget(form.ministere, {'attr': {'class': 'required form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    {{ form_label(form.thematique) }}
                                    {{ form_errors(form.thematique) }}
                                        <div class="">
                                            {{ form_widget(form.thematique) }}
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /row -->
                        <div id="bottom-wizard">
                            <button type="submit" class="submit">Soumettez votre demande</button>
                        </div>
                </div>
                <!-- /Last step ============================== -->
            </div>

            {{ form_widget(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
    <!-- /Container -->

{# <script src="{{asset('js/compteur.js')}}"></script> #}

{% endblock %}