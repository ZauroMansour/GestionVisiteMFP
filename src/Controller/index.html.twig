{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <div>
    <br>
    <br>
        <h1 align='center'>Liste des demandes de Formation </h1>
    <br>
        <table class="table">
            <thead>
                <tr>
                    <th>Matricule</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Formation</th>
                    <th>Ministere</th>
